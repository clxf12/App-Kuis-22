<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="fill_vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="247dp"
        android:layout_height="240dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/simbol"
        android:id="@+id/book1"
        />
///////////////////////////////////////////

    <ImageView
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:src="@drawable/txt_kpu"
        android:layout_below="@+id/book1"
        android:layout_centerHorizontal="true"
        android:id="@+id/kuis1"
        />

    <ImageView
        android:id="@+id/koldaf1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/kuis1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/kol_s" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:src="@drawable/kol_s"
        android:layout_below="@+id/koldaf1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:id="@+id/kolmsk2"
        />

    /////////////DECOR///////////

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/decor"
        android:layout_below="@+id/kuis1"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="-25dp"
        android:id="@+id/deco1"
        />

    ///////////TEXT///////////

    <ImageView
        android:id="@+id/deco2"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/kolmsk2"
        android:layout_marginStart="270dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="-300dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/decor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/koldaf1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-67dp"
        android:fontFamily="@font/modak"
        android:textColor="@color/grey"
        android:textSize="27sp"
        android:text="DAFTAR"
        android:id="@+id/txtdaf1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kolmsk2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-67dp"
        android:fontFamily="@font/modak"
        android:textColor="@color/grey"
        android:textSize="27sp"
        android:text="MASUK"
        android:id="@+id/txtmsk1"/>

    <ImageView
        android:id="@+id/msk12"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/transparent"
        />


    <FrameLayout
        android:id="@+id/G_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


</RelativeLayout>


